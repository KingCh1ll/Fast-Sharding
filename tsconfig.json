{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"noImplicitAny": true,
		"declaration": true,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"baseUrl": "./",
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}